{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./hardhat.config.ts",
    "./ignition/**/*.ts"
  ],
  "exclude": ["node_modules", "artifacts", "cache"]
}
